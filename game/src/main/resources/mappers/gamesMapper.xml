<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.game.dao.GamesDao">
    <resultMap id="Games" type="Games">
        <result column="g_no" property="gNo" />
        <result column="g_name" property="gName" />
        <result column="g_info" property="gInfo" />
        <result column="g_date" property="gDate" />
        <result column="g_price" property="gPrice" />
        <result column="img" property="img" />
    </resultMap>
    <resultMap id="Member" type="Member" >
        <result column="member_id" property="memberId" />
        <result column="email" property="email" />
        <result column="name" property="name" />
        <result column="password" property="password" />
        <result column="balance" property="balance" />
    </resultMap>

    <select id="getAllGames"  resultType="Games" resultMap="Games">
        select * from game
    </select>
    <select id="getGameByNo" parameterType="int" resultType="Games" resultMap="Games">
        SELECT * FROM game WHERE g_no = #{gNo}
    </select>


</mapper>